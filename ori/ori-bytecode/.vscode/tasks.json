{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang build",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${workspaceRoot}/*.c",
                "-o",
                "${workspaceRoot}/ori",
                "-Wall",
                "-Wextra",
                "-Wpedantic"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}